<div class="third">
  <p id="js-password">Forgot your password?</p>

  <%= form_for(resource,
               as: resource_name,
               url: password_path(resource_name),
               html: { method: :post, class: 'no-display' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="left"><%= f.label :email %>
    <%= f.email_field :email, :autofocus => true %></div>

    <div class="left"><%= f.submit "Send me reset password instructions" %></div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
