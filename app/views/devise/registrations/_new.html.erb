<div class="third">
  <p id="js-sign-up">Sign up</p>

  <%= form_for(resource,
              as: resource_name,
              url: registration_path(resource_name),
              html: { class: 'no-display'}) do |f| %>
    <%= devise_error_messages! %>

    <div class="left">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true %>
    </div>

    <div class="left">
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="left">
      <%= f.label :photo %>
       <%= f.file_field :photo  %>
    </div>

    <div class="left">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>