<div class="third">
  <p id="js-sign-in">Sign in</p>
  <%= form_for(resource,
               url: session_path(resource_name),
               html: { class: 'no-display'}) do |f| %>
    <div class="left">
      <%= f.label :login %>
      <%= f.text_field :login, :autofocus => true %>
    </div>

    <div class="left">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="left">
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="left sign-in-button"><%= f.submit "Sign in" %></div>
  <% end %>

</div>

<%= render "devise/shared/links" %>
